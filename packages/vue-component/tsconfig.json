{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "rootDir": "./lib",
    "paths": {
      "@/*": [
        "./lib/*"
      ],
      "@type/*": [
        "./lib/types/*"
      ],
      "@utils/*": [
        "./lib/utils/*"
      ]
    }
  },
  "include": [
    "lib/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.d.ts",
    "lib/**/*.vue",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}